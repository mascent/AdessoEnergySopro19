{
  "name": "adesso-energy",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm run test -- --watchAll false --coverage",
    "test:generate-output": "react-scripts test --json --watchAll false --outputFile=jest-test-results.json",
    "storybook": "start-storybook -p 9999 -s public",
    "build-storybook": "npm run test:generate-output && build-storybook -s public",
    "format": "prettier --write \"src/**/*.+(js|ts|tsx|json|css|scss|html|md)\"",
    "lint": "eslint . --cache-location node_modules/.cache/eslint"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md, html}": [
      "npm run format",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/*.stories.*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@types/classnames": "^2.2.9",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/reach__router": "^1.2.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-modal": "^3.8.3",
    "@types/react-transition-group": "^4.2.2",
    "@types/uniqid": "^4.1.3",
    "@types/validator": "^10.11.3",
    "chart.js": "^2.8.0",
    "classnames": "^2.2.6",
    "mdi-react": "^5.5.0",
    "react": "^16.9.0",
    "react-chartjs-2": "^2.7.6",
    "react-dom": "^16.9.0",
    "react-modal": "^3.10.1",
    "react-scripts": "3.1.1",
    "react-transition-group": "^4.3.0",
    "typescript": "3.5.3",
    "uniqid": "^5.0.3",
    "use-input-validation": "^1.0.1",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.1.11",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-backgrounds": "^5.1.11",
    "@storybook/addon-jest": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@storybook/theming": "^5.1.11",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/faker": "^4.1.5",
    "@types/storybook-react-router": "^1.0.0",
    "@types/storybook__addon-knobs": "^5.0.3",
    "@types/storybook__react": "^4.0.2",
    "faker": "^4.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "node-sass": "^7.0.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.9.0"
  }
}
